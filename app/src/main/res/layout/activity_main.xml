<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">

    <ImageView
        android:id="@+id/tklogo"
        android:layout_width="168dp"
        android:layout_height="168dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="32dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tklogo" />

    <ImageView
        android:id="@+id/teckatnm2"
        android:layout_width="231dp"
        android:layout_height="34dp"
        app:layout_constraintEnd_toEndOf="@+id/teckatnm1"
        app:layout_constraintStart_toStartOf="@+id/teckatnm1"
        app:layout_constraintTop_toBottomOf="@+id/teckatnm1"
        app:srcCompat="@drawable/letter2" />

    <ImageView
        android:id="@+id/teckatnm1"
        android:layout_width="304dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/tklogo"
        app:layout_constraintStart_toStartOf="@+id/tklogo"
        app:layout_constraintTop_toBottomOf="@+id/tklogo"
        app:srcCompat="@drawable/letter" />

    <Button
        android:id="@+id/letsGobtn"
        android:layout_width="265dp"
        android:layout_height="47dp"
        android:layout_marginBottom="62dp"
        android:background="@drawable/lets_start_btn"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Let's Go"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="@+id/teckatnm2"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/teckatnm2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Crafted with ❤️ by Team Teckat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/letsGobtn"
        app:layout_constraintStart_toStartOf="@+id/letsGobtn" />

</androidx.constraintlayout.widget.ConstraintLayout>